@model IEnumerable<UgraTestPoll.ViewModels.UserViewModel>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

@if (Model.Count() == 0)
{
    <p>No people registered yet</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Login, "UserTests", new { id = item.ID})
            </td>
        </tr>
    }

</table>
