@model IEnumerable<UgraTestPoll.ViewModels.TestsListElementViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Tests</h2>
@if (Model.Count() == 0)
{
    <p>There is no tests yet</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Pass", new { id = item.ID })
        </td>
    </tr>
}

</table>
